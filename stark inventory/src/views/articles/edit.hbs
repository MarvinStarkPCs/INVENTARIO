<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark border border-dark">
        <div class="card-body">
          <form action="/articles/edit/{{article.id}}" method="POST">
           
            <div class="form-group">
                <label for="nombreproducto" style="color: #FFFFFF">Nombre del Producto</label>
              <input
                type="text"
                name="nombreproducto"
                class="form-control bg-dark text-light"
                placeholder="Nombre del Producto"
                value="{{article.nombreproducto}}"
                
              />
            </div>

            <div class="form-group">
             <label for="marca" style="color: #FFFFFF">Marca</label>
              <input
                type="text"
                name="marca"
                class="form-control bg-dark text-light"
                placeholder="Marca"
                value="{{article.marca}}"
                
              />
            </div>
            <div class="form-group">
              <label for="descripcion" style="color: #FFFFFF">Descripción</label>
           <textarea
                name="descripcion"
                rows="2"
                class="form-control bg-dark text-light"
                placeholder="Descripción"
              >{{article.descripcion}}</textarea>
                
              
            </div>
            <label for="cantidad" style="color: #FFFFFF">Cantidad</label>
            <div class="form-group">
              <input
                type="text"
                name="cantidad"
                class="form-control bg-dark text-light"
                placeholder="Cantidad"
                value="{{article.cantidad}}"
                
              />
            </div>
            <label for="marca" style="color: #FFFFFF">Entrada</label>
            <div class="form-group">
              <input
                type="text"
                name="entrada"
                class="form-control bg-dark text-light"
                placeholder="Entrada"
                value = "{{article.entrada}}"/>
            </div>
            <label for="marca" style="color: #FFFFFF">Salida</label>
            <div class="form-group">
              <input
                type="text"
                name="salida"
                class="form-control bg-dark text-light"
                placeholder="Salida"
                value = "{{article.salida}}"/>
            </div>
            <label for="marca" style="color: #FFFFFF">Total Stock</label>
            <div class="form-group">
              <input
                type="text"
                name="totalstock"
                class="form-control bg-dark text-light"
                placeholder="Total Stock"
                value = "{{article.totalstock}}"/>
            </div>
            <label for="marca" style="color: #FFFFFF">Precio Costo</label>
            <div class="form-group">
              <input
                type="text"
                name="preciocosto"
                class="form-control bg-dark text-light"
                placeholder="Precio Costo"
                value = "{{article.preciocosto}}"/>
            </div>
            <label for="marca" style="color: #FFFFFF">Precio venta</label>
            <div class="form-group">
              <input
                type="text"
                name="precioventa"
                class="form-control bg-dark text-light"
                placeholder="Precio Venta"
                value = "{{article.precioventa}}"/>
            </div>
           
   
            <div class="form-group">
              <button class="btn btn-success btn-block">
              Guardar Cambio
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>