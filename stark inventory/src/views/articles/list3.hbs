<div class="container p-4">
  <div class="row">
    {{#each article}}
      <div class="col-md-3 p-2">
        <div class="card text-center  text-light h-100"style="background :#1797e7">
          <div class="card-body">
            <p target="_blank" class="text-light">
              <h3 class="card-title text-uppercase">
                {{title}}
              </h3>
               <p class="m-2">{{precio}}</p>
            </p>
            <p class="m-2">{{description}}</p>
        
            <a class="btn btn-danger" href="/articles/delete/{{id}}">
              Borrar Articulo
            </a>
            <a class="btn btn-secondary" href="/articles/edit/{{id}}">
              Editar
            </a>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center bg-dark text-light">
          <p>Ingrasar un articulo.</p>
          <a href="/articles/add" class="text-success">crear!</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>