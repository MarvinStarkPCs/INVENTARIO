<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form
        action="/signin"
        method="POST"
        class="card card bg-dark text-white p-4"
      >
        <h3 class="text-center my-3">
          Login
        </h3>

        <img
          src="/img/icono.ico"
          alt="Logo Stark Inventroy "
          class="card-img-top mx-auto m-2 w-50"
        />
        <div class="card-body">
          {{! Email }}
          <label for="username" class="fw-light fs-6 mb-2">
           Ingrese su Email:
          </label>
          <input
            type="text"
            name="email"
            placeholder="Email"
            class="form-control mb-3"
            autofocus
          />

          <label for="password">
            Ingrese su contraseña:
          </label>
          <div class="form-group">
            <input
              type="password"
              name="password"
              placeholder="Contraseña"
              class="form-control mb-3"
            />
          </div>
          <button class="btn btn-primary btn-block">
            Iniciar Sessión
          </button>
        </div>
      </form>

      {{! Link }}
      <p class="fs-5 text-center mt-3">
        ¿No tienes cuenta?
        <a href="/signup" class="text-info">
          registrate 
          </a class="fs-5 text-center mt-3">
    </p>
     <p class="fs-5 text-center mt-3">
      
        <a href="/resetPassword" class="text-info">
          ¿Perdiste tu contraseña? 
          </a class="fs-5 text-center mt-3">
    </p>

   


    </div>
  </div>
</div>